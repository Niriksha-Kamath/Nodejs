pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                git 'https://github.com/Niriksha-Kamath/Nodejs.git'
            }
        }

        stage('Build Backend Image') {
            steps {
                sh 'docker build -t nirikshaakamath/backend:latest backend/'
            }
        }

        stage('Build Frontend Image') {
            steps {
                sh 'docker build -t nirikshaakamath/frontend:latest frontend/'
            }
        }

        stage('Push Images') {
            steps {
                withCredentials([string(credentialsId: 'dockerhub-pass', variable: 'PASS')]) {
                    sh '''
                    docker login -u nirikshaakamath -p $PASS
                    docker push nirikshaakamath/backend:latest
                    docker push nirikshaakamath/frontend:latest
                    '''
                }
            }
        }

        stage('Deploy') {
            steps {
                sh '''
                docker-compose down
                docker-compose up -d
                '''
            }
        }
    }
}
